<style>
  :root {
    --bg-color: #faf6f1;
    --border-color: #c9c2b8;
    --text-color: #3d3d3d;
    --text-muted: #888;
  }

  body {
    background-color: var(--bg-color);
    margin: 0;
    height: 100vh;
    width: 100vw;
    color: var(--text-color);
    box-sizing: border-box;
  }

  main {
    margin: 0 auto;
    height: 100%;
    padding: 2rem;
    box-sizing: border-box;
    max-width: 1200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

<style is:global>
  .cell {
    border: 1px dashed var(--border-color);
    padding: 1.5rem;
    margin: -1px;
  }

  .label {
    display: block;
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-bottom: 0.75rem;
    margin-top: 0;
  }

  .title.label {
    margin-bottom: 0.25rem;
  }

  .hint {
    display: block;
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  /* Intro Section */
  .intro {
    grid-column: 1;
    grid-row: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    min-height: 200px;
  }

  .intro h1 {
    margin: 0;
    font-size: 1.75rem;
    font-weight: normal;
  }

  .intro .subtitle {
    margin: 0.25rem 0 0;
    color: var(--text-muted);
  }

  /* Playground Section */
  .playground {
    grid-column: 2;
    grid-row: 1 / 3;
    display: flex;
    flex-direction: column;
    min-height: 400px;
  }

  .skills-area {
    flex: 1;
    min-height: 300px;
  }

  .skills-tray {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: flex-end;
    padding-top: 1rem;
  }

  .skill-tag {
    border: 1px solid var(--border-color);
    padding: 0.5rem 1rem;
    font-size: 0.85rem;
    background: var(--bg-color);
  }

  .skill-tag.tilted {
    transform: rotate(-5deg);
    position: relative;
    top: -10px;
  }

  .skill-tag.elevated {
    position: relative;
    top: -20px;
  }

  .drop-hint {
    color: var(--text-muted);
    font-size: 0.8rem;
    margin-left: auto;
  }

  /* About Section */
  .about {
    grid-column: 1;
    grid-row: 2;
  }

  .about p {
    margin: 0;
    line-height: 1.6;
  }

  /* Experience Section */
  .experience {
    grid-column: 1;
    grid-row: 3;
  }

  .experience-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .experience-list li {
    display: flex;
    align-items: baseline;
    margin-bottom: 0.5rem;
  }

  .experience-list .role {
    white-space: nowrap;
  }

  .experience-list .dots {
    flex: 1;
    border-bottom: 1px dotted var(--border-color);
    margin: 0 0.5rem;
    position: relative;
    top: -4px;
  }

  .experience-list .company {
    white-space: nowrap;
    color: var(--text-muted);
  }

  /* Footer Section (Socials + Version) */
  .footer {
    grid-column: 2;
    grid-row: 3;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .social-links .label {
    margin-bottom: 0;
    margin-right: 0.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-color);
    text-decoration: none;
  }

  .social-link:hover {
    text-decoration: underline;
  }

  .icon {
    width: 16px;
    height: 16px;
  }

  .version-info {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .playground {
      display: none;
    }

    .intro,
    .about,
    .experience,
    .footer {
      grid-column: 1;
    }

    .intro {
      grid-row: 1;
    }

    .about {
      grid-row: 2;
    }

    .experience {
      grid-row: 3;
    }

    .footer {
      grid-row: 4;
    }

    .footer-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .version-info {
      align-items: flex-start;
    }
  }
</style>

<style is:global>
  @font-face {
    font-family: "Liberation Mono";
    src: url("/fonts/libmono.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  * {
    font-family: "Liberation Mono", "Courier New", Courier, monospace;
    box-sizing: border-box;
  }
</style>
